{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "types": [],
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}